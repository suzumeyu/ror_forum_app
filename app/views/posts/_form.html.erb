<%= form_with model: post, local: true, html: { class: "post-card post-form" } do |form| %>

  <% if form.object.errors.any? %>
    <p class="error">
      <%= form.object.errors.full_messages.first %>
    </p>
  <% end %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.rich_text_area :content %>
  </div>

  <div class="form-actions">
    <!-- Left site: Attach Image -->
    <%= form.file_field :image, accept: "image/*", class: "btn-attach-image" %>

    <!-- Right site: Create / Cancel -->
    <div class="right-buttons">
      <%= form.submit post.new_record? ? "Create" : "Update", class: "btn-create" %>
      <%= link_to "Cancel", posts_path, class: "btn-cancel", role: "button" %>
    </div>
  </div>

<% end %>