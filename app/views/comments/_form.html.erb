<%= form_with model: comment, local: false, html: { class: "comment-form" } do |form| %>

  <% if form.object.errors.any? %>
    <p class="error">
      <%= form.object.errors.full_messages.first %>
    </p>
  <% end %>

  <%= form.hidden_field :post_id, value: comment.post&.id || params[:post_id] %>

  <div class="form-group">
    <%= form.label :content %>
    <%= form.rich_text_area :content %>
  </div>

  <div class="form-actions">
    <%= form.submit comment.new_record? ? "Create" : "Update", class: "btn-update-comment" %>
    <%= link_to "Cancel", "#", class: "btn-cancel-comment", role: "button" %>
  </div>

<% end %>